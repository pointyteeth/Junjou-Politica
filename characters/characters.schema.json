{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Character",
    "description": "A character.",
    "type": "object",
    "properties": {
        "name": {
            "description": "The name of the character.",
            "type": "string"
        },
        "profile": {
            "description": "The URL of the profile picture of the character.",
            "type": "string"
        },
        "image": {
            "description": "The URL of the image of the character to be placed on the canvas.",
            "type": "string"
        }
    },
    "required": ["profile", "image"]
}
